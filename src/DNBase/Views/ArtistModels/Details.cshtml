@model DNBase.Models.ArtistModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.ArtistName)</h1>
<a asp-action="Edit" asp-route-id="@Model.ArtistID">Edit</a> | 
<a asp-action="Delete" asp-route-id="@Model.ArtistID">Delete</a>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Bandcamp:
        </dt>
        <dd class="col-sm-10">
            <a href="https://bandcamp.com/search?q= @Html.DisplayFor(model => model.ArtistName)"
               target="_blank" style="color:#0366d6" rel="noopener noreferrer">@Html.DisplayFor(model => model.ArtistName)</a>
        </dd>
        <dt class="col-sm-2">
            Country:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CountryOfOrigin)
        </dd>
        <dt class="col-sm-2">
            Subgenre:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subgenre.SubgenreName)
        </dd>
    </dl>
</div>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                Artist Albums
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Albums)
        {
            <tr>
                <td>
                    <a asp-controller="AlbumModels"
                       asp-action="Details" asp-route-id="@item.AlbumID">@Html.DisplayFor(modelItem => item.AlbumName)</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">All Artists</a> |
    <a asp-controller="SubgenreModels"
       asp-action="Details" asp-route-id="@Model.SubgenreID">@Html.DisplayFor(model => model.Subgenre.SubgenreName) artists</a>
</div>
