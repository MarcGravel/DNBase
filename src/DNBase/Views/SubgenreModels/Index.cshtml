@model PaginatedList<DNBase.Models.SubgenreModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Subgenres</h1>

<p>
    <a asp-action="Create">Add a subgenre here</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search by name or keyword: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-outline-primary" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<span style="color:red;"><b>@TempData["messageNonFound"]</b></span>

<table class="table">
    <tbody>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Subgenres</a>
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.SubgenreID">@Html.DisplayFor(modelItem => item.SubgenreName)</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SubgenreID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.SubgenreID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-outline-dark @prevDisabled">
    <text>Previous</text>
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-outline-dark @nextDisabled">
    <text>Next</text>
</a>
